root = true

[{*kt,*kts}]
indent_style = space
indent_size = 2

end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[*.esdl]
indent_style = tab
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

[*.http]
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true